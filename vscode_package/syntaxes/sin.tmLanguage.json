{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SIN",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#typenames"
		},
		{
			"include": "#qualifiers"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sin",
					"match": "\\b(if|else|while|return|asm|switch|case|default)\\b"
				},
				{
					"name": "keyword.operator.sin",
					"match": "\\b(and|or|not|xor|is|as|\\+|-|/|\\*|\\||&|\\^|%|$|\\.)|(::)\\b"
				},
				{
					"name": "keyword.other.sin",
					"match": "\\b(alloc|let|def|decl|include|move)\\b"
				},
				{
					"name": "invalid.deprecated",
					"match": "\\bfree\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.sin",
					"match": "\\b(((0x)[0-9a-fA-F]+)|\\d+)\\b"
				},
				{
					"name": "constant.language.sin",
					"match": "\\b(true|false|null|len|size|var)\\b"
				},
				{
					"name": "constant.character.sin",
					"match": "(\\\\n|\\\\t|\\\\r)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.sin",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.sin",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash",
			"begin": "//",
			"end": "(\n)|(\r\n)|(\r)"
		},
		"typenames": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\\b(void|byte|bool|int|float|raw|char|string|struct|template|typename|array|ptr|proc)\\b"
				},
				{
					"name": "entity.name.class",
					"begin": "struct\\b",
					"end": "\\{",
					"match": "(?<=(struct\\s+)|(template\\s+))\\b([_a-zA-Z][_a-zA-Z0-9]*\\b)(?=\\s*\\{)"
				}
			]
		},
		"qualifiers": {
			"patterns": [
				{
					"name": "storage.modifier",
					"match": "\\b(signed|unsigned|static|dynamic|const|constexpr|final|long|public|private|short|c64|windows|sincall)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "entity.name.function",
					"begin": "\\b",
					"end": "\\(",
					"match": "(\\b([_a-zA-Z][_a-zA-Z0-9]*))(?=\\()"
				},
				{
					"name": "variable",
					"begin": "\\b",
					"end": "\\b",
					"match": "([_a-zA-Z][_a-zA-Z0-9]*)",
					"beginCaptures": {
						"0": { "name": "variable.name" }
					}
				},
				{
					"name": "variable.parameter",
					"begin": "([_a-zA-Z][_a-zA-Z0-9]*) ?\\(",
					"end": "\\)",
					"match": ""
				},
				{
					"name": "variable.language",
					"match": "\\b(this)\\b"
				}
			]
		}
	},
	"scopeName": "source.sin"
}