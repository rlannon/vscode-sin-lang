{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SIN",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#typenames"
		},
		{
			"include": "#qualifiers"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sin",
					"match": "\\b(if|else|while|return)\\b"
				},
				{
					"name": "keyword.operator.sin",
					"match": "\\b(and|or|not|xor|is|\\+|-|/|\\*|\\||&|\\^|%)\\b"
				},
				{
					"name": "keyword.other.sin",
					"match": "\\b(alloc|free|let|def|decl|include)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.sin",
					"match": "\\b(((0x)[0-9a-fA-F]+)|\\d+)\\b"
				},
				{
					"name": "constant.language.sin",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name": "constant.character.sin",
					"match": "(\\\\n|\\\\t|\\\\r)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.sin",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.sin",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash",
			"begin": "//",
			"end": "(\n)|(\r\n)|(\r)"
		},
		"typenames": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\\b(void|byte|bool|int|float|raw|char|string)\\b"
				},
				{
					"name": "support.type",
					"match": "\\b(struct|array|ptr)\\b"
				}
			]
		},
		"qualifiers": {
			"patterns": [
				{
					"name": "storage.modifier",
					"match": "\\b(signed|unsigned|static|dynamic|const|constexpr|final|long|short)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "entity.name.function",
					"begin": "\\b",
					"end": "\\(",
					"match": "(\\b([_a-zA-Z]+[_a-zA-Z0-9]?))(?=\\()"
				},
				{
					"name": "variable",
					"begin": "\\b",
					"end": "\\b",
					"match": "([_a-zA-Z]+[_a-zA-Z0-9]?)",
					"beginCaptures": {
						"0": { "name": "variable.name" }
					}
				}
			]
		}
	},
	"scopeName": "source.sin"
}